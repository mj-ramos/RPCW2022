extends layout

block content
  div(class="w3-container w3-indigo")
    h2 ♬ #{title}
  
  div(class="w3-card w3-panel w3-border w3-blue w3-margin",style="width:15%")        
    p
      a(href='http://localhost:3022/musicas/inserir') Registar música
  
  div(class="w3-container w3-margin")
    table(class="w3-table-all")
      tr(class="w3-gray")
        th Id
        th Província
        th Local
        th Título
        th Músico
        th Duração
      each m in musicas
        tr
          td= m.id
          td
            a(href='http://localhost:3022/musicas/prov/'+ m.prov)= m.prov

          if typeof(m.local) == 'undefined'
            td= "-----"
          else 
            td= m.local

          td
            a(href="http://localhost:3022/musicas/" + m.id)= m.tit
         
          if typeof(m.musico) == 'undefined'
            td= "-----"
          else 
            td= m.musico

          td= m.duracao

  footer(class="w3-container w3-indigo")
    address 2022 © Maria Ramos
                

